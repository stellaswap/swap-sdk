{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./types",
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "**/*"
    ]
}